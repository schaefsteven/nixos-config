# Brightness
# bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -d intel_backlight s 5%+
# bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -d intel_backlight s 5%-
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.nix/scripts/bri-change "5%+"
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.nix/scripts/bri-change "5%-"

# Use pactl to adjust volume in PulseAudio.
# set $refresh_i3status killall -SIGUSR1 i3status
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.nix/scripts/vol-change "+3"
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.nix/scripts/vol-change "-3"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && ~/.nix/scripts/vol-notif

# fix monitor not being primary

exec --no-startup-id xrandr --output eDP-1 --primary

